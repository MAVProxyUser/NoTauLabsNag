<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_gravity="center_horizontal" >

    <Button
        android:id="@+id/launch_controller"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="3"
        app:layout_gravity="right"
        app:layout_row="1"
        app:layout_rowSpan="4"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_controller"
        android:text="@string/controller_name" />

    <Button
        android:id="@+id/launch_object_browser"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="right|bottom"
        app:layout_row="2"
        app:layout_rowSpan="2"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_browser"
        android:text="@string/object_browser_name" />

    <Button
        android:id="@+id/launch_tuning"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="4"
        app:layout_gravity="right|bottom"
        app:layout_row="2"
        app:layout_rowSpan="2"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_tuning"
        android:text="@string/tuning" />

    <Button
        android:id="@+id/launch_logger"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="2"
        app:layout_gravity="right|bottom"
        app:layout_row="2"
        app:layout_rowSpan="2"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_logging"
        android:text="@string/logger_name" />

    <Button
        android:id="@+id/launch_alarms"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="left"
        app:layout_row="5"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_alarms"
        android:text="@string/alarms" />

    <Button
        android:id="@+id/launch_pfd"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="2"
        app:layout_gravity="left"
        app:layout_row="5"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_pfd"
        android:text="@string/pfd_name" />

    <Button
        android:id="@+id/launch_location"
        app:layout_width="132dp"
        app:layout_height="wrap_content"
        app:layout_column="3"
        app:layout_gravity="right|bottom"
        app:layout_row="3"
        app:layout_rowSpan="3"
        app:background="@android:color/transparent"
        app:drawableTop="@drawable/ic_map"
        android:text="@string/location_name" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="0" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:layout_column="0"
        android:layout_row="4" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:layout_column="0"
        android:layout_row="8" />
    
    <android.support.v7.widget.Space
        android:layout_height="15dp"
        android:layout_column="1" />

    <android.support.v7.widget.Space
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_row="6" />

</android.support.v7.widget.GridLayout>
