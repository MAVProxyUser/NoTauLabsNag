<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res/org.openpilot_nonag.androidgcs"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<android.support.v7.widget.GridLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    app:layout_gravity="center_horizontal" >

    <Button
        android:id="@+id/launch_object_browser"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="0"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_browser"
        android:text="@string/object_browser_name" />

    <Button
        android:id="@+id/launch_pfd"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="2"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_pfd"
        android:text="@string/pfd_name" />

    <Button
        android:id="@+id/launch_wizard"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="right"
        app:layout_row="2"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_wizard"
        android:text="@string/wizard_name" />

    <Button
        android:id="@+id/launch_logger"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="right"
        app:layout_row="0"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_logging"
        android:text="@string/logger_name" />

    <Button
        android:id="@+id/launch_alarms"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="right"
        app:layout_row="4"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_alarms"
        android:text="@string/alarms" />

	<Button
        android:id="@+id/launch_tuning"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="right"
        app:layout_row="6"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_tuning"
        android:text="@string/tuning" />

    <Button
        android:id="@+id/launch_location"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="4"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_map"
        android:text="@string/location_name" />

    <Button
        android:id="@+id/launch_tfr"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="center"
        app:layout_row="6"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_tfr"
        android:text="@string/tfr_name" />

    <Button
        android:id="@+id/launch_cc"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="8"
        app:layout_rowSpan="2"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_cc"
        android:text="@string/cc_name" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="32dp"
        app:layout_column="0"
        app:layout_row="0" />

    <android.support.v7.widget.Space
        android:layout_width="100dp"
        android:layout_height="69dp"
        app:layout_row="1" />

</android.support.v7.widget.GridLayout>
</ScrollView>
